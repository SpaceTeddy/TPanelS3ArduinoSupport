{
  "name": "TPanelS3ArdionoSupport",
  "version": "0.1.0",
  "license": "MIT",
  "authors": [
    { "name": "Space Teddy", "email": "spaceteddy1@gmx.net" }
  ],
  "description": "ESP32-S3 display+touch bring-up (Arduino_GFX RGB panel + TouchLib) with LVGL init.",
  "repository": {
    "type": "git",
    "url": "https://github.com/SpaceTeddy/TPanelS3ArduinoSupport.git"
  },
  "frameworks": ["arduino"],
  "platforms": ["espressif32"],
  "build": {
    "flags": [
      "-D TOUCH_MODULES_CST_MUTUAL",
      "-D CST3240_ADDRESS=0x2E"
    ],
    "libArchive": true
  },
  "dependencies": [
    {
      "name": "TouchLib",
      "version": "https://github.com/mmMicky/TouchLib.git@^0.0.2"
    },
    {
      "name": "lvgl",
      "version": "^9.2.2"
    }
  ],
  "export": {
    "exclude": [
      ".*", "test", "scripts", ".github"
    ]
  },
  "examples": [
    "examples/*/*.ino"
  ]
}
